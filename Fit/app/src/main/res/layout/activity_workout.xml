<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFitBg1"
    android:keepScreenOn="true"
    tools:context="com.kinetic.fit.ui.workout.WorkoutActivity">

    <FrameLayout
        android:id="@+id/workout_session_video_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <com.kinetic.fit.ui.widget.FitLinearLayout
        android:id="@+id/workour_session_hud_fit_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorFitBg2"
        android:orientation="vertical"
        tools:context="com.kinetic.fit.ui.workout.WorkoutActivity">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="?attr/colorFitBg1"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/hud_time_total" />

            <TextView
                android:id="@+id/workout_session_text_session_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="14:53.5"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/hud_time_lap" />

            <TextView
                android:id="@+id/workout_session_text_lap_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="14:53.5"
                android:textSize="20dp" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorFitBg1">

            <fragment
                android:id="@+id/workout_session_hud_fragment"
                class="com.kinetic.fit.ui.hud.HUDPagerFragment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dp" />
        </FrameLayout>

        <com.kinetic.fit.ui.widget.WorkoutGraphView
            android:id="@+id/workout_overview_graph"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="?attr/colorFitBg0">

        </com.kinetic.fit.ui.widget.WorkoutGraphView>


        <include
            layout="@layout/footer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.kinetic.fit.ui.widget.FitLinearLayout>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</android.support.v4.widget.DrawerLayout>