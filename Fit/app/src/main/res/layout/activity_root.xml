<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="profile"
            type="com.kinetic.fit.viewModels.ProfileViewModel"/>
    </data>
    <android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFitBg0"
        tools:context="com.kinetic.fit.ui.root.RootActivity_">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorFitBg0"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp">


                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_calories"
                    android:tint="?attr/colorFitHeadline" />

                <TextView
                    android:id="@+id/header_ftp_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 FTP"
                    android:textColor="?attr/colorFitHeadline"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_time"
                    android:tint="?attr/colorFitHeadline" />

                <TextView
                    android:id="@+id/header_duration_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 FTP"
                    android:textColor="?attr/colorFitHeadline"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_distance"
                    android:tint="?attr/colorFitHeadline" />

                <TextView
                    android:id="@+id/header_distance_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 FTP"
                    android:textColor="?attr/colorFitHeadline"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="16dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_power"
                    android:tint="?attr/colorFitHeadline" />

                <TextView
                    android:id="@+id/header_kilojoules_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{profile.user.name}"
                    android:textColor="?attr/colorFitHeadline"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/border_t" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_container_root"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/history_session_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorFitBg2"
                    android:layoutAnimation="@anim/fall_down_layout"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </android.support.v4.widget.SwipeRefreshLayout>

            <include
                layout="@layout/footer_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

        </LinearLayout>

        <include
            android:id="@+id/drawer_left"
            layout="@layout/nav_drawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start" />


    </android.support.v4.widget.DrawerLayout>
</layout>