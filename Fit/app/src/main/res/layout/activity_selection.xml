<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinetic.fit.ui.workout.SelectionActivity_">

    <com.kinetic.fit.ui.workout.WorkoutSelectionSortView_ xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/workoutSortView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFitBg2"
        android:orientation="vertical"
        tools:context="com.kinetic.fit.ui.workout.SelectionActivity_">

        <com.kinetic.fit.ui.widget.FitSearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorFitBg0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_b"
            android:orientation="horizontal">

            <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/workoutsort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_checked_text_color="?attr/colorFitBg0"
                segmentedgroup:sc_corner_radius="2dp"
                segmentedgroup:sc_tint_color="?attr/colorFitPrimary">

                <RadioButton
                    android:id="@+id/workout_name_sort"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NAME"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/workout_duration_sort"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DURATION"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/workout_if_sort"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IF"
                    android:textSize="13dp" />

                <RadioButton
                    android:id="@+id/workout_tss_sort"
                    style="@style/RadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TSS"
                    android:textSize="13dp" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

        <com.kinetic.fit.ui.widget.SubscriptionCalloutWidget
            android:id="@+id/subscription_callout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_workout_selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorFitBg1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layoutAnimation="@anim/fall_down_layout" />

    </com.kinetic.fit.ui.workout.WorkoutSelectionSortView_>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</android.support.v4.widget.DrawerLayout>