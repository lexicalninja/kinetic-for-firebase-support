<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorFitBg1"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/callout_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:textColor="?attr/colorFitHeadline"
        android:text="@string/subscription_callout_header"
        android:textAllCaps="true"/>

    <com.kinetic.fit.ui.widget.FitButton
        android:id="@+id/subscribe_button"
        xmlns:fit="http://schemas.android.com/apk/res/com.kinetic.fit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:buttonType="default"
        />

</LinearLayout>