<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="?attr/colorFitBg2">

    <TextView
        android:id="@+id/alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textSize="24sp"
        android:textColor="?attr/colorFitHeadline"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="@drawable/border_tlr"
        />
    <TextView
        android:id="@+id/alert_message"
        android:background="@drawable/border_lr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="aklsdjfklajsdklfjaks"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alert_negative_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/border_tblr"
            android:textColor="?attr/colorFitPrimary"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/alert_positive_button"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/border_tblr"
            android:textColor="?attr/colorFitPrimary"
            />


    </LinearLayout>


</LinearLayout>