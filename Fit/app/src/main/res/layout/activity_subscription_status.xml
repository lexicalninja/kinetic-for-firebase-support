<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinetic.fit.ui.analysis.AnalysisActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/footer"
            layout="@layout/footer_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/footer"
            android:background="?attr/colorFitBg1"
            android:orientation="vertical">

            <com.kinetic.fit.ui.widget.SubscriptionStatusWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorFitBg2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorFitBg0">

                <TextView
                    android:id="@+id/trial_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12sp"
                    android:text="Free 7-day Trial!"
                    android:textColor="?attr/colorFitHeadline"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:id="@+id/subs_button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/trial_text"
                    android:layout_marginBottom="8sp">

                    <LinearLayout
                        android:id="@+id/monthly_sub"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:layout_marginBottom="8sp"
                        android:layout_marginEnd="6sp"
                        android:layout_marginStart="12sp"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/border_tblr_green"
                        android:padding="8sp">

                        <TextView
                            android:id="@+id/monthly_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4sp"
                            android:gravity="center"
                            android:text="@string/empty_string"
                            android:textColor="?attr/colorFitPrimary" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/monthly"
                            android:textSize="12sp"
                            android:textColor="?attr/colorFitPrimary"
                            android:gravity="center"
                            android:layout_marginBottom="4sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/quarterly_sub"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:layout_marginBottom="8sp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginStart="6sp"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/border_tblr_green"
                        android:padding="8sp">

                        <TextView
                            android:id="@+id/quarterly_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4sp"
                            android:gravity="center"
                            android:text="@string/empty_string"
                            android:textColor="?attr/colorFitPrimary" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quarterly"
                            android:textSize="12sp"
                            android:textColor="?attr/colorFitPrimary"
                            android:gravity="center"
                            android:layout_marginBottom="4sp"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/fetching_prices_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/trial_text"
                    android:layout_alignBottom="@id/subs_button_layout"
                    android:background="?attr/colorFitBgAlpha"
                    android:text="@string/subscriptions_fetching_prices"
                    android:gravity="center"
                    android:textColor="?attr/colorFitHeadline"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:background="@drawable/border_t"
                android:gravity="center_vertical|start">

                <com.kinetic.fit.ui.widget.FitBikerAnimationScene
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginTop="16sp"
                    android:text="@string/training_plan_subscriptions_bullets" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280sp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>