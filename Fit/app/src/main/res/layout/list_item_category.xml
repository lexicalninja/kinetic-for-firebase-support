<?xml version="1.0" encoding="utf-8"?>
<com.kinetic.fit.ui.workout.CategoryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workout_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="?attr/colorFitBg0"
    android:orientation="horizontal"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoryThumb"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/category_freeride" />

        <TextView
            android:id="@+id/categoryCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:padding="8dp"
            android:text="100"
            android:textColor="?attr/colorFitPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="?attr/colorFitHeadline"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/categoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Description"
            android:textSize="16sp" />
    </LinearLayout>


</com.kinetic.fit.ui.workout.CategoryItemView>