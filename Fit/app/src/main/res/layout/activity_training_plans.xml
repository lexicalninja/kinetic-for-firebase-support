<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFitBg1"
    android:keepScreenOn="true"
    tools:context="com.kinetic.fit.ui.workout.WorkoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFitBg2"
        android:clipToPadding="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorFitBg0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_b"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:translationZ="5dp">

                <ImageView
                    android:id="@+id/training_plans_selection_difficulty_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/training_plans_selection_difficulty_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_tblr_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="?attr/colorFitPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/training_plans_selection_volume_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:id="@+id/training_plans_selection_volume_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border_tblr_green"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="?attr/colorFitPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <com.kinetic.fit.ui.widget.FitSearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorFitBg0" />
        <com.kinetic.fit.ui.widget.SubscriptionCalloutWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/subscription_callout"
            android:layout_margin="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/training_plans_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/fall_down_layout"/>
    </LinearLayout>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</android.support.v4.widget.DrawerLayout>