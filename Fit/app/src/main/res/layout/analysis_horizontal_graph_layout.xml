<?xml version="1.0" encoding="utf-8"?>
<com.kinetic.fit.ui.analysis.AnalysisHorizontalGraphView_ xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <!--Left Third-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:background="?attr/colorFitBg0"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_tr"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/analysisGraphZoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Zone 1"
                android:textColor="?attr/colorFitPower"
                android:textStyle="bold" />

            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/analysisGraphZoneTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingBottom="5dp" />

        </LinearLayout>
    </LinearLayout>

    <!--Middle Third-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="?attr/colorFitBg2">

        <include
            android:id="@+id/barGraph"
            layout="@layout/analysis_bar_graph" />

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/pct_in_zone_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_t"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:textSize="30sp" />
    </RelativeLayout>

    <!--Right Third-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:background="?attr/colorFitBg0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_tlr"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/analysisGraphZoneTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:padding="1dp"
                android:textColor="?attr/colorFitPower"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/analysisGraphZoneRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:padding="1dp" />
        </LinearLayout>

    </LinearLayout>

</com.kinetic.fit.ui.analysis.AnalysisHorizontalGraphView_>