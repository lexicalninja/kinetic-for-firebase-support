<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kinetic.fit.ui.analysis.AnalysisActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/footer"
            layout="@layout/footer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/analysis_overview_new_ftp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/footer"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="?attr/colorFitPrimary"
            android:textSize="18sp" />

        <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/analysis_overview_new_ftp_text">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        android:id="@+id/weirdLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorFitBg1"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax">

                        <TextView
                            android:id="@+id/analysis_session_workout_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="12dp"
                            android:background="?attr/colorFitBg1"
                            android:text="flee Ride"
                            android:textColor="?attr/colorFitHeadline"
                            android:textSize="20sp"
                            app:layout_scrollFlags="scroll" />

                        <TextView
                            android:id="@+id/analysis_session_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="16dp"
                            android:background="?attr/colorFitBg1"
                            android:text="October 11, 2015 at 3:19 PM"
                            android:textSize="14sp"
                            app:layout_scrollFlags="scroll" />

                        <com.kinetic.fit.ui.widget.FitSessionStatsWidget
                            android:id="@+id/analysis_scrolling_stats_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/colorFitBg1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="?attr/colorFitBg0"
                            android:orientation="horizontal"
                            android:paddingTop="1dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:paddingLeft="20dp" />

                            <View
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:text="Avg"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingBottom="5dp"
                                android:paddingRight="20dp"
                                android:paddingTop="5dp"
                                android:text="Max"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorFitBg0"
                            android:orientation="horizontal"
                            android:paddingTop="1dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Power"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_r"
                                android:padding="10dp"
                                android:src="@mipmap/icon_power" />

                            <TextView
                                android:id="@+id/analysis_overview_power_avg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="--- w"
                                android:textColor="?attr/colorFitPower"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/analysis_overview_power_max"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingRight="20dp"
                                android:text="--- w"
                                android:textColor="?attr/colorFitPower"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorFitBg0"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Heart Rate"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_r"
                                android:padding="10dp"
                                android:src="@mipmap/icon_heart" />

                            <TextView
                                android:id="@+id/analysis_overview_heart_avg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="--- bpm"
                                android:textColor="?attr/colorFitHeart"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/analysis_overview_heart_max"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingRight="20dp"
                                android:text="--- bpm"
                                android:textColor="?attr/colorFitHeart"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorFitBg0"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Cadence"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_r"
                                android:padding="10dp"
                                android:src="@mipmap/icon_cadence" />

                            <TextView
                                android:id="@+id/analysis_overview_cadence_avg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="--- rpm"
                                android:textColor="?attr/colorFitCadence"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/analysis_overview_cadence_max"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingRight="20dp"
                                android:text="--- rpm"
                                android:textColor="?attr/colorFitCadence"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorFitBg0"
                            android:orientation="horizontal"
                            android:paddingBottom="1dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Speed"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_r"
                                android:padding="10dp"
                                android:src="@mipmap/icon_speed" />

                            <TextView
                                android:id="@+id/analysis_overview_speed_avg"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="--- mph"
                                android:textColor="?attr/colorFitSpeed"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/analysis_overview_speed_max"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:paddingRight="20dp"
                                android:text="--- mph"
                                android:textColor="?attr/colorFitSpeed"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.Toolbar
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:padding="0dp"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin">

                        <com.kinetic.fit.ui.widget.FitSessionStatsWidget
                            android:id="@+id/analysis_toolbar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/colorFitBg1"
                            android:visibility="invisible" />
                    </android.support.v7.widget.Toolbar>
                </android.support.design.widget.CollapsingToolbarLayout>

                <com.kinetic.fit.ui.widget.FitGraphView
                    android:id="@+id/analysis_graph"
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    android:background="?attr/colorFitBg0"
                    app:layout_anchor="@id/appbar"
                    app:layout_anchorGravity="bottom|start" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/lapTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="?attr/colorFitPrimary"
                    app:tabSelectedTextColor="?attr/colorFitPrimary"
                    android:background="?attr/colorFitBg1"/>

            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/lapViewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</android.support.v4.widget.DrawerLayout>