<?xml version="1.0" encoding="utf-8"?>
<com.kinetic.fit.ui.settings.profile.SocialStatusView_ xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="?attr/colorFitBg1">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tblr"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/socialIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@mipmap/social_icons_strava" />

        <ImageView
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="10dp"
            android:src="@mipmap/button_connected" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_tb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_b"
            android:gravity="center"
            android:padding="5dp"
            android:text="Social"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="?attr/colorFitBg0"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Visibility"
                android:textSize="14dp" />


            <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/visibility"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_checked_text_color="?attr/colorFitBg0"
                segmentedgroup:sc_corner_radius="16dp"
                segmentedgroup:sc_tint_color="?attr/colorFitPrimary">

                <RadioButton
                    android:id="@+id/visibility0"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/visibility1"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textSize="14dp" />

                <RadioButton
                    android:id="@+id/visibility2"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:textSize="14dp" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_tblr"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Auto"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/autoShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/button_toggle_blue_unchecked"
            android:elevation="24dp" />
    </LinearLayout>


</com.kinetic.fit.ui.settings.profile.SocialStatusView_>