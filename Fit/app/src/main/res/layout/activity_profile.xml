<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFitBg0"
    tools:context="com.kinetic.fit.ui.root.RootActivity_">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFitBg2">

        <include
            android:id="@+id/profile_footer"
            layout="@layout/footer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/profile_footer">

            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/profile_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:background="?attr/colorFitBg0">

                    <TextView
                        android:id="@+id/profile_name_heading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:text="@string/profile_heading_text_name"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorFitBody"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/profile_name_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_name_heading_text"
                        android:layout_margin="4dp"
                        android:background="?attr/colorFitBg0"
                        android:inputType="text|textNoSuggestions"
                        android:padding="8dp"
                        android:text="Your Name Here"
                        android:textColor="?attr/colorFitPrimary" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_name_layout"
                    android:layout_margin="8dp"
                    android:background="?attr/colorFitBg0">

                    <TextView
                        android:id="@+id/profile_email_heading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:text="@string/profile_heading_text_email"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorFitBody"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/profile_email_display_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_email_heading_text"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:text="Your email@ Here"
                        android:textColor="?attr/colorFitBody" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_vitals_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_email_layout"
                    android:layout_margin="8dp"
                    android:background="?attr/colorFitBg0">

                    <TextView
                        android:id="@+id/profile_vitals_heading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:text="@string/profile_heading_text_chart"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorFitBody"
                        android:textSize="12sp" />

                    <com.kinetic.fit.ui.widget.FitButton
                        android:id="@+id/profile_unit_selection_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="8dp"
                        android:minHeight="0dp"
                        android:padding="2dp"
                        android:text="@string/profile_text_imperial"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorFitPrimary"
                        android:textSize="12sp"
                        app:buttonType="basic" />

                    <LinearLayout
                        android:id="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_vitals_heading_text"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_birthday_heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_heading_text_birthdate"
                            android:textAllCaps="true" />

                        <com.kinetic.fit.ui.widget.FitButton
                            android:id="@+id/profile_birthdate_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:minHeight="10dp"
                            android:padding="2dp"
                            android:text="September 21, 1989"
                            app:buttonType="basic" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_1"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_weight_heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_heading_text_weight"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:gravity="center_vertical">

                            <com.kinetic.fit.ui.widget.PlusMinusAttributeWidget
                                android:id="@+id/profile_weight_picker_widget"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="0dp"
                                android:padding="2dp"
                                android:text="September 21, 1989"
                                app:buttonType="basic" />

                            <TextView
                                android:id="@+id/profile_weight_unit_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/profile_text_pounds"
                                android:textAllCaps="true" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_2"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_height_heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_heading_text_height"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:gravity="center_vertical">

                            <com.kinetic.fit.ui.widget.PlusMinusAttributeWidget
                                android:id="@+id/profile_height_picker_widget"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="0dp"
                                android:padding="2dp"
                                app:buttonType="basic" />

                            <TextView
                                android:id="@+id/profile_height_unit_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="@string/profile_text_inches"
                                android:textAllCaps="true" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_zones_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_vitals_layout"
                    android:layout_margin="8dp"
                    android:background="?attr/colorFitBg0">

                    <TextView
                        android:id="@+id/profile_zones_heading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:text="@string/profile_heading_text_zones"
                        android:textAllCaps="true"
                        android:textColor="?attr/colorFitBody"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/profile_power_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_zones_heading_text"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:text="@string/profile_heading_text_power"
                            android:textAllCaps="true"
                            android:textColor="?attr/colorFitHeadline"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            app:srcCompat="@drawable/material_icon_power"
                            android:tint="?attr/colorFitPrimary"
                            android:scaleType="fitCenter" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_power_header_layout"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_power_ftp_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_text_ftp"
                            android:textAllCaps="true" />

                        <com.kinetic.fit.ui.widget.PlusMinusAttributeWidget
                            android:id="@+id/profile_ftp_picker_widget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:minHeight="0dp"
                            android:padding="2dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/profile_heart_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_5"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:text="@string/profile_heading_text_heart"
                            android:textAllCaps="true"
                            android:textColor="?attr/colorFitHeadline"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="false"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            app:srcCompat="@drawable/material_icon_heart"
                            android:tint="?attr/colorFitPrimary"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_heart_header_layout"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_heart_resting_heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_text_resting"
                            android:textAllCaps="true" />

                        <com.kinetic.fit.ui.widget.PlusMinusAttributeWidget
                            android:id="@+id/profile_resting_heart_picker_widget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:minHeight="0dp"
                            android:padding="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_6"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_heading_heart_max"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight=".4"
                            android:text="@string/profile_text_max"
                            android:textAllCaps="true" />

                        <com.kinetic.fit.ui.widget.PlusMinusAttributeWidget
                            android:id="@+id/profile_max_heart_picker_widget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight=".6"
                            android:minHeight="0dp"
                            android:padding="2dp"
                            app:buttonType="basic" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</android.support.v4.widget.DrawerLayout>