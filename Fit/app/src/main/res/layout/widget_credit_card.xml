<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stripe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorFitBg0"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tblr_green">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:text="@string/enter_credit_card_info"
            android:textColor="?attr/colorFitHeadline" />

        <LinearLayout
            android:id="@+id/credit_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text"
            android:background="@drawable/border_tb"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:background="?attr/colorFitBg0"
                    android:padding="8dp"
                    stripe:srcCompat="@drawable/material_icon_camera"
                    android:tint="?attr/colorFitPrimary"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    />


            <com.stripe.android.view.CardInputWidget
                android:id="@+id/stripe_widget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/camera_icon"
                stripe:cardTextErrorColor="?attr/colorFitDestructive"
                stripe:cardTint="?attr/colorFitPrimary" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit_card_layout"
            android:padding="8dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginStart="8dp"
                    android:text="@string/shipping"
                    android:layout_marginTop="11dp"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <EditText
                    android:id="@+id/shipping_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:hint="@string/name_caps"
                    android:inputType="textCapCharacters"/>
                <EditText
                    android:id="@+id/shipping_address1"
                    android:layout_below="@id/shipping_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:hint="@string/address_caps"
                    android:inputType="textCapCharacters"/>
                <EditText
                    android:id="@+id/shipping_address2"
                    android:layout_below="@id/shipping_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"/>
                <LinearLayout
                    android:id="@+id/city_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/shipping_address2">
                    <EditText
                        android:id="@+id/shipping_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:hint="@string/city_caps"/>
                    <EditText
                        android:id="@+id/shipping_state_prov"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:hint="@string/state_prov_caps"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/post_code_country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/city_state_layout">
                    <EditText
                        android:id="@+id/shipping_post_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:inputType="textCapCharacters"
                        android:hint="@string/postal_caps"/>
                    <Spinner
                        android:id="@+id/shipping_country"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:hint="@string/country_caps"
                        style="@style/Base.V7.Widget.AppCompat.EditText"
                        android:clickable="true"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>