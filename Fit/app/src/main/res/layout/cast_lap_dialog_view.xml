<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <com.lb.auto_fit_textview.AutoResizeTextView
        android:id="@+id/cast_dialog_popup_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:text="Test"
        android:textSize="28dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/colorFitBg1"
        android:orientation="horizontal">

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/cast_dialog_popup_duration_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_t"
            android:gravity="center"
            android:padding="10dp"
            android:text="02:00"
            android:textColor="?attr/colorFitPrimary"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <include
                android:id="@+id/cast_dialog_power_view"
                layout="@layout/hud_property_view_mini" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <include
                android:id="@+id/cast_dialog_laps_view"
                layout="@layout/hud_property_view_mini" />
        </LinearLayout>

        <com.lb.auto_fit_textview.AutoResizeTextView
            android:id="@+id/cast_dialog_popup_power_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_t"
            android:gravity="center"
            android:padding="10dp"
            android:text="200 watts"
            android:textColor="?attr/colorFitPower"
            android:textSize="24dp" />

    </LinearLayout>
</LinearLayout>