<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorFitBg1">
    <ImageView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_scene_sun"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentEnd="true"/>
    <FrameLayout
        android:id="@+id/mountains1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sun">

        <FrameLayout
            android:id="@+id/mountains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/repeating_mountains" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/trees1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sun"
        android:layout_marginTop="30dp">

        <FrameLayout
            android:id="@+id/trees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/repeating_trees" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/hills1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mountains1"
        android:layout_marginTop="25dp">

        <FrameLayout
            android:id="@+id/hills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/repeating_hills" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/grass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hills1">

        <FrameLayout
            android:id="@+id/grass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/repeating_grass" />
    </FrameLayout>

    <ImageView
        android:id="@+id/biker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/grass1"
        android:layout_alignBottom="@id/grass1"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="75dp"
        />
</RelativeLayout>