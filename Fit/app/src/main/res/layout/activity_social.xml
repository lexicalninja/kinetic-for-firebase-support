<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFitBg0"
    tools:context="com.kinetic.fit.ui.root.RootActivity_">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorFitBg2"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorFitBg2"
            android:orientation="vertical">

            <include
                android:id="@+id/socialGoogle"
                layout="@layout/social_status" />
            <include
                android:id="@+id/socialStrava"
                layout="@layout/social_status" />

            <include
                android:id="@+id/socialMapMyFitness"
                layout="@layout/social_status" />

            <include
                android:id="@+id/socialTrainingPeaks"
                layout="@layout/social_status" />

            <include
                android:id="@+id/social2Peak"
                layout="@layout/social_status" />
            <include
                android:id="@+id/socialDropbox"
                layout="@layout/social_status" />
            <include
                android:id="@+id/socialTwitter"
                layout="@layout/social_status" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/drawer_left"
        layout="@layout/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />


</android.support.v4.widget.DrawerLayout>