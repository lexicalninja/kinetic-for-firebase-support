<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:background="?attr/colorFitBg2">

    <TextView
        android:id="@+id/sensor_settings_sensor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        android:text="Smart Control 73:1D"
        android:textColor="?attr/colorFitGreen"
        android:textSize="20sp"
        android:background="?attr/colorFitBg1"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="?attr/colorFitBg0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sensor_settings_speed_icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/icon_speed"
                android:tint="@color/fit_light_gray" />

            <TextView
                android:id="@+id/sensor_settings_speed_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:text="---"
                android:textColor="@color/fit_light_gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sensor_settings_cadence_icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/icon_cadence"
                android:tint="@color/fit_light_gray" />

            <TextView
                android:id="@+id/sensor_settings_cadence_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:text="---"
                android:textColor="@color/fit_light_gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sensor_settings_power_icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/icon_power"
                android:tint="@color/fit_light_gray" />

            <TextView
                android:id="@+id/sensor_setting_power_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:text="---"
                android:textColor="@color/fit_light_gray"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sensor_settings_heart_rate_icon"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/material_icon_heart"
                android:tint="@color/fit_light_gray" />

            <TextView
                android:id="@+id/sensor_settings_heart_rate_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:text="---"
                android:textColor="@color/fit_light_gray"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_settings_calibration_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/colorFitBg0"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="CONTROLLER SETTINGS"
            android:textColor="?attr/colorFitHeadline" />

        <com.kinetic.fit.ui.widget.FitButton xmlns:fit="http://schemas.android.com/apk/res/com.kinetic.fit"
            android:id="@+id/sensor_settings_button_calibrate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:minHeight="0dp"
            android:padding="6dp"
            android:text="Calibrate"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sensor_settings_firmware_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/colorFitBg0"
        android:orientation="vertical"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="FIRMWARE"
            android:textColor="?attr/colorFitHeadline"
            android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/firmware_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:layout_marginEnd="4dp"/>
        </RelativeLayout>
        <com.kinetic.fit.ui.widget.FitButton xmlns:fit="http://schemas.android.com/apk/res/com.kinetic.fit"
            android:id="@+id/sensor_settings_button_update_firmware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:minHeight="0dp"
            android:padding="6dp"
            android:text="Update Firmware"
            android:textAllCaps="false"
            android:textSize="18sp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sensor_setting_trailing_layout_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kinetic.fit.ui.widget.FitButton xmlns:fit="http://schemas.android.com/apk/res/com.kinetic.fit"
            android:id="@+id/sensor_settings_button_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:minHeight="0dp"
            android:paddingBottom="6dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            fit:buttonType="destructive" />
    </RelativeLayout>

</LinearLayout>