<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp"
    android:background="?attr/colorFitBg0">

    <TextView
        android:id="@+id/tss_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text="TSS History"
        android:textAllCaps="true"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tss_title"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/this_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:text="this week"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/this_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/this_week_text"
            android:layout_margin="8dp"
            android:text="this month"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/this_month_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_month_text"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/this_month_text"
            android:text="0"
            android:textColor="?attr/colorFitPrimary"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/this_week_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_week_text"
            android:layout_alignEnd="@id/this_month_value"
            android:text="0"
            android:textColor="?attr/colorFitPrimary"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/last_week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_week_value"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/this_week_value"
            android:text="previous"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/last_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_month_value"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/this_month_value"
            android:text="previous"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/last_week_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_week_text"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/last_week_text"
            android:text="0"
            android:textColor="?attr/colorFitBody"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/last_month_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/this_month_value"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/last_month_text"
            android:text="0"
            android:textColor="?attr/colorFitBody"
            android:textSize="24sp" />


    </RelativeLayout>
</RelativeLayout>