<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <size android:width="36dp" android:height="24dp" />
            <stroke android:width="4dp" android:color="@color/fit_light_gray" />

        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <size android:width="36dp" android:height="24dp" />
            <stroke android:width="2dp" android:color="@color/fit_light_gray" />
            <gradient android:startColor="#00ff00"
                android:endColor="#00ff00"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <size android:width="36dp" android:height="24dp" />
            <stroke android:width="4dp" android:color="@color/fit_dark_gray" />
            <gradient android:startColor="@color/fit_light_gray"
                android:endColor="@color/fit_light_gray"
                />

        </shape>
    </item>
</selector>